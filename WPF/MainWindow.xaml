                                        x:Name="PatternEntry"
                                        Padding="5"
                                        AcceptsReturn="True"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        FontSize="16"
                                        HorizontalScrollBarVisibility="Disabled"
                                        TextWrapping="Wrap"
                                        VerticalScrollBarVisibility="Auto">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                                            <Border
                                                                x:Name="border"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                SnapsToDevicePixels="True">
                                                                <ScrollViewer
                                                                    x:Name="PART_ContentHost"
                                                                    Focusable="false"
                                                                    HorizontalScrollBarVisibility="Hidden"
                                                                    VerticalScrollBarVisibility="Hidden" />
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsEnabled" Value="false">
                                                                    <Setter TargetName="border" Property="Opacity" Value="0.56" />
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="true">
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                                                                </Trigger>
                                                                <Trigger Property="IsFocused" Value="true">
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Border>
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                                <TextBlock FontSize="14" Text="Color" />
                                <Border
                                    Width="250"
                                    Margin="0,0,20,0"
                                    Background="White"
                                    BorderBrush="Black"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <TextBox
                                        x:Name="ColorEntry"
                                        Padding="5"
                                        AcceptsReturn="True"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        FontSize="16"
                                        HorizontalScrollBarVisibility="Disabled"
                                        TextWrapping="Wrap"
                                        VerticalScrollBarVisibility="Auto">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                                            <Border
                                                                x:Name="border"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                SnapsToDevicePixels="True">
                                                                <ScrollViewer
                                                                    x:Name="PART_ContentHost"
                                                                    Focusable="false"
                                                                    HorizontalScrollBarVisibility="Hidden"
                                                                    VerticalScrollBarVisibility="Hidden" />
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsEnabled" Value="false">
                                                                    <Setter TargetName="border" Property="Opacity" Value="0.56" />
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="true">
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                                                                </Trigger>
                                                                <Trigger Property="IsFocused" Value="true">
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Border>
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                                <TextBlock FontSize="14" Text="Product Number" />
                                <Border
                                    Width="250"
                                    Margin="0,0,20,0"
                                    Background="White"
                                    BorderBrush="Black"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <TextBox
                                        x:Name="ProdNumEntry"
                                        Padding="5"
                                        AcceptsReturn="True"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        FontSize="16"
                                        HorizontalScrollBarVisibility="Disabled"
                                        TextWrapping="Wrap"
                                        VerticalScrollBarVisibility="Auto">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                                            <Border
                                                                x:Name="border"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                SnapsToDevicePixels="True">
                                                                <ScrollViewer
                                                                    x:Name="PART_ContentHost"
                                                                    Focusable="false"
                                                                    HorizontalScrollBarVisibility="Hidden"
                                                                    VerticalScrollBarVisibility="Hidden" />
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsEnabled" Value="false">
                                                                    <Setter TargetName="border" Property="Opacity" Value="0.56" />
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="true">
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                                                                </Trigger>
                                                                <Trigger Property="IsFocused" Value="true">
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Border>
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                                <TextBlock FontSize="14" Text="Vertical Repeat" />
                                <Border
                                    Width="125"
                                    Margin="0,0,20,0"
                                    Background="White"
                                    BorderBrush="Black"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <TextBox
                                        x:Name="VertRepeatEntry"
                                        Padding="5"
                                        AcceptsReturn="True"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        FontSize="16"
                                        HorizontalScrollBarVisibility="Disabled"
                                        TextWrapping="Wrap"
                                        VerticalScrollBarVisibility="Auto">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                                            <Border
                                                                x:Name="border"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                SnapsToDevicePixels="True">
                                                                <ScrollViewer
                                                                    x:Name="PART_ContentHost"
                                                                    Focusable="false"
                                                                    HorizontalScrollBarVisibility="Hidden"
                                                                    VerticalScrollBarVisibility="Hidden" />
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsEnabled" Value="false">
                                                                    <Setter TargetName="border" Property="Opacity" Value="0.56" />
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="true">
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                                                                </Trigger>
                                                                <Trigger Property="IsFocused" Value="true">
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Border>
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                                <TextBlock FontSize="14" Text="Horizontal Repeat" />
                                <Border
                                    Width="125"
                                    Margin="0,0,20,0"
                                    Background="White"
                                    BorderBrush="Black"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <TextBox
                                        x:Name="HorzRepeatEntry"
                                        Padding="5"
                                        AcceptsReturn="True"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        FontSize="16"
                                        HorizontalScrollBarVisibility="Disabled"
                                        TextWrapping="Wrap"
                                        VerticalScrollBarVisibility="Auto">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                                            <Border
                                                                x:Name="border"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                SnapsToDevicePixels="True">
                                                                <ScrollViewer
                                                                    x:Name="PART_ContentHost"
                                                                    Focusable="false"
                                                                    HorizontalScrollBarVisibility="Hidden"
                                                                    VerticalScrollBarVisibility="Hidden" />
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsEnabled" Value="false">
                                                                    <Setter TargetName="border" Property="Opacity" Value="0.56" />
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="true">
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                                                                </Trigger>
                                                                <Trigger Property="IsFocused" Value="true">
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Border>
                            </StackPanel>
                            <StackPanel Margin="0,10,20,0" Orientation="Vertical">
                                <TextBlock FontSize="14" Text="Railroaded" />
                                <Border
                                    Width="100"
                                    Background="White"
                                    BorderBrush="Black"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <ComboBox
                                        x:Name="RailroadedComboBox"
                                        Padding="5"
                                        Background="Transparent"
                                        FontSize="16"
                                        IsEditable="True"
                                        IsReadOnly="True"
                                        Text="{Binding Railroaded}">
                                        <ComboBoxItem Content="OB" FontSize="16" />
                                        <ComboBoxItem Content="RR" FontSize="16" />
                                        <ComboBoxItem Content="OB/RR" FontSize="16" />
                                        <ComboBoxItem Content="Leather" FontSize="16" />
                                    </ComboBox>
                                </Border>
                            </StackPanel>
                            <StackPanel Margin="0,10,20,0" Orientation="Vertical">
                                <TextBlock FontSize="14" Text="Backing" />
                                <Border
                                    Width="100"
                                    Background="White"
                                    BorderBrush="Black"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <ComboBox
                                        x:Name="BackingComboBox"
                                        Padding="5"
                                        Background="Transparent"
                                        FontSize="16"
                                        IsEditable="True"
                                        IsReadOnly="True"
                                        Text="{Binding Backing}">
                                        <ComboBoxItem Content="N/A" FontSize="16" />
                                        <ComboBoxItem Content="Required" FontSize="16" />
                                    </ComboBox>
                                </Border>
                            </StackPanel>

                            <StackPanel Margin="0,10,20,0" Orientation="Vertical">
                                <TextBlock FontSize="14" Text="Durability" />
                                <Border
                                    Width="125"
                                    Margin="0,0,10,0"
                                    Background="White"
                                    BorderBrush="Black"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <TextBox
                                        x:Name="DurabilityEntry"
                                        Padding="5"
                                        AcceptsReturn="True"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        FontSize="16"
                                        HorizontalScrollBarVisibility="Disabled"
                                        TextWrapping="Wrap"
                                        VerticalScrollBarVisibility="Auto">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                                            <Border
                                                                x:Name="border"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                SnapsToDevicePixels="True">
                                                                <ScrollViewer
                                                                    x:Name="PART_ContentHost"
                                                                    Focusable="false"
                                                                    HorizontalScrollBarVisibility="Hidden"
                                                                    VerticalScrollBarVisibility="Hidden" />
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsEnabled" Value="false">
                                                                    <Setter TargetName="border" Property="Opacity" Value="0.56" />
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="true">
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                                                                </Trigger>
                                                                <Trigger Property="IsFocused" Value="true">
                                                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent" />
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Border>
                            </StackPanel>

                            <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                                <TextBlock FontSize="14" Text="Width" />
                                <Border
                                    Width="125"
                                    Margin="0,0,20,0"
                                    Background="White"
                                    BorderBrush="Black"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <TextBox
                                        x:Name="WidthEntry"
                                        Padding="5"
                                        AcceptsReturn="True"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        FontSize="16"
                                        HorizontalScrollBarVisibility="Disabled"
                                        TextWrapping="Wrap"
                                        VerticalScrollBarVisibility="Auto">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
